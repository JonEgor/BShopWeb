<h1>Все книги</h1>
<h3>@Model.bookCategory</h3>
<div class ="row mt-5 mb-2">
@{
    foreach (var book in Model.allBooks)
    {
        <div class = "col-lg-4">
            <img class ="img-thumbnail" src="@book.img" alt="@book.name"/>      
        <h2>@book.name</h2>
        <p>book.shorDesc</p>
        <p>Цена: @book.price.ToString("c")</p>
        <p><a class="btn btn-warning" href ="#">Подробнее</a></p>
            </div>
    }

}
</div>




